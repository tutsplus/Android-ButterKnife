<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_textview"
        android:text="@string/fragment_textview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#33b5e5"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/sample_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_button_text"
        android:layout_below="@+id/sample_textview"
        android:layout_centerHorizontal="true"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sample_button"
        android:name="fragment.SampleFragment"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/sample_fragment" />

</RelativeLayout>